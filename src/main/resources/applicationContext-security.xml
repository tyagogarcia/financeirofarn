<beans:beans xmlns="http://www.springframework.org/schema/security"
		xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
							http://www.springframework.org/schema/security
							http://www.springframework.org/schema/security/spring-security-3.1.xsd">

 	 <http  auto-config="true"  use-expressions="true">
 	 	<form-login /> 	 	 	 
 	 	
 	 	<intercept-url pattern="/login.xhtml" access="permitAll" />
 	 	<intercept-url pattern="/index.xhtml" access="permitAll" />
 	 	<intercept-url pattern="/resources/**" access="permitAll" />
 	 	<intercept-url pattern="/javax.faces.resource/**" access="permitAll" />
 	 	<intercept-url pattern="/adm/permissoes/**" access="hasRole('ROLE_ADMIN')" />
 	 	<intercept-url pattern="/adm/usuario/**" access="hasRole('ROLE_ADMIN')" />
 	 	<intercept-url pattern="/adm/tipoconta/**" access="hasRole('ROLE_ADMIN')" /> 	 	
	    <intercept-url pattern="/**" access="hasAnyRole('ROLE_NADA','ROLE_USUARIO','ROLE_ADMIN')" />  
	  </http>
 	
 	
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="admin" authorities="ROLE_USUARIO,ROLE_ADMIN" />
				<user name="usuario" password="usuario" authorities="ROLE_USUARIO" />
				<user name="nada" password="nada" authorities="ROLE_NADA" />				
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>
